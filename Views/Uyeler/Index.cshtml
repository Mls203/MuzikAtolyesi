@model List<FinalProje.Models.Uyeler>

@{
    var ornekgrid = new WebGrid(source: Model, canPage: true, rowsPerPage: 10);
    ornekgrid.Pager(WebGridPagerModes.All);

}


 <style type="text/css">
    /*Burada grid için css ekleyeceğiz*/
    .webgrid-table {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        font-size: 1.2em;
        width: 100%;
        display: table;
        border-collapse: separate;
        border: solid 1px #ffd800;
        background-color: white;
    }

        .webgrid-table td, th {
            border: 1px solid #ffd800;
            padding: 3px 7px 2px;
        }

    .webgrid-header {
        background-color: #ff6a00;
        color: #FFFFFF;
        padding-bottom: 4px;
        padding-top: 5px;
        text-align: left;
    }

    .webgrid-footer {
    }

    .webgrid-row-style {
        padding: 3px 7px 2px;
    }

     .webgrid-alternating-row {
         background-color: #FFC107;
         padding: 3px 7px 2px;
     }
     #b8 {
         background: #ffd800;
         margin-left:10px;
         padding:10px;
         width:80px;
     }
     h2,h3{
         margin-left:5px;
         margin-top:10px;
     }
</style>

<html>

<body>
    <nav style="padding-right: 25px; padding-left: 25px">

    </nav>
    <h2>Üyeler Listesi</h2>
    <h3>Toplam Kayıt Sayısı: @ViewBag.TotalRows</h3>
    @using (Html.BeginForm("Index", "Uyeler", FormMethod.Get, new { @style = "height:50px" }))
    {
<div>


    <input style="margin-left: 10px; width: 300px; height: 45px; float: left" type="text" placeholder="Search" name="search" value="@ViewBag.search" />
    <button id="b8" style="float:left" type="submit" class="btn btn-main btn-round-full">Ara </button>
</div>}




    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="collapse navbar-collapse">
                @using (Html.BeginForm("Index", "Uyeler", FormMethod.Get, new { @class = "navbar-form navbar-left" }))

                {<div class="form-group">
                        <input type="text" name="search" value="@ViewBag.search" class="form-control" placeholder="search" />

                    </div>

                    <button type="submit" value="ARA" class="btn btn-success"></button>

                }
            </div>

        </div>
    </nav>
    <div id="content">
        @ornekgrid.GetHtml(
         tableStyle: "webgrid-table",
         headerStyle: "webgrid-header",
         footerStyle: "webgrid-footer",
         alternatingRowStyle: "webgrid-alternating-row",
         rowStyle: "webgrid-row-style",
         columns: ornekgrid.Columns(
         ornekgrid.Column(columnName: "UyeAdi", header: "Ad"),
         ornekgrid.Column(columnName: "UyeSoyadi", header: "Soyad"),
         ornekgrid.Column(columnName: "UyeTc", header: "TC"),
         ornekgrid.Column(columnName: "UyeTel", header: "Telefon"),
         ornekgrid.Column(columnName: "UyeAdres", header: "Adres")    ))

    </div>

</body>
</html>

